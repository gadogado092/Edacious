<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity" android:background="@color/colorback">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/all"
            android:id="@+id/imageView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <android.support.v7.widget.RecyclerView

            android:id="@+id/list"

            android:layout_width="match_parent"

            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp" android:background="@color/colorback" android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>